package javaclassweek6;
public class Circle 
{
    private double radius;
    private double diameter;
    private double area;
   // 1 constructor always public
    
    public Circle()  //default (empty parameter)
    {
     radius = 1; //set raidus to 1
     diameter = 2  *1;  //calcu diam
     area = 3.14 * radius * radius;   //calcu area pi = radius * radius
    }
    
  //getters
    public double getRadius()
    { return radius; }
    
  //setters
    public void setRadius(double R)
    {
        radius = R;
        diameter = 2 * R;
        area = 3.14 * R *R;
    }
}
